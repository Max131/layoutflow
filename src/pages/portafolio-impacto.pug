          figure.area-icon
            img(src="images/icons/icon_seguridad_alimentaria.svg", alt="", loading="lazy")
            figcaption
              span Emisiones de GEI
          figure.area-icon
            img(src="images/icons/icon_mejores_practicas_de_empleo.svg", alt="", loading="lazy")
            figcaption
              span Seguridad alimentaria
          figure.area-icon
            img(src="images/icons/icon_salud_y_seguridad_en_el_trabajo.svg", alt="", loading="lazy")
            figcaption
              span Salud del suelo
          figure.area-icon
            img(src="images/icons/icon_adaptacion_al_clima_resiliencia_y_transicion.svg", alt="", loading="lazy")
            figcaption
              span Adaptación al clima, resiliencia y transición
