            figcaption
              span Uso de pesticidas
          figure.area-icon
            img(src="images/icons/icon_no_discriminacion_e_igualdad_de_oportunidades.svg", alt="", loading="lazy")
            figcaption
              span Prácticas de empleo
          figure.area-icon
            img(src="images/icons/icon_salud_del_suelo.svg", alt="", loading="lazy")
            figcaption
              span No discriminación e igualdad de oportunidades
          figure.area-icon
            img(src="images/icons/icon_recurso_8.svg", alt="", loading="lazy")
            figcaption
              span Salud y seguridad en el trabajo
          figure.area-icon
            img(src="images/icons/icon_inclusion_social_y_economica.svg", alt="", loading="lazy")
            figcaption
              span Trabajo forzoso u obligatorio
          figure.area-icon
            img(src="images/icons/icon_promocion_de_ingreso_y_salarios_vitales.svg", alt="", loading="lazy")
            figcaption
              span Inclusión económica
          figure.area-icon
            img(src="images/icons/icon_recurso_11.svg", alt="", loading="lazy")
            figcaption
              span Ingreso y salarios vitales
          figure.area-icon
            img(src="images/icons/icon_derechos_sobre_la_tierra_y_los_recursos.svg", alt="", loading="lazy")
            figcaption
              span Trabajo infantil
          figure.area-icon
            img(src="images/icons/icon_biodiversidad.svg", alt="", loading="lazy")
            figcaption
              span Derechos sobre la tierra y los recursos
          figure.area-icon
            img(src="images/icons/icon_disminucion_de_emisiones_de_gases_de_efecto_invernadero_gei.svg", alt="", loading="lazy")
